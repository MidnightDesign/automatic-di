<?xml version="1.0"?>
<ruleset name="Eventjet coding standard">
    <rule ref="EventjetStrict"/>
    <file>src</file>
    <file>tests</file>

    <!-- phpcs cannot deal with union type pipes, yet -->
    <rule ref="PSR12.Operators.OperatorSpacing.NoSpaceBefore">
        <exclude-pattern>tests/unit/RequiresUnionType.php</exclude-pattern>
        <exclude-pattern>tests/unit/UnionTypeWithDefaultValue.php</exclude-pattern>
    </rule>
    <rule ref="PSR12.Operators.OperatorSpacing.NoSpaceAfter">
        <exclude-pattern>tests/unit/RequiresUnionType.php</exclude-pattern>
        <exclude-pattern>tests/unit/UnionTypeWithDefaultValue.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.WhiteSpace.OperatorSpacing.NoSpaceBefore">
        <exclude-pattern>tests/unit/RequiresUnionType.php</exclude-pattern>
        <exclude-pattern>tests/unit/UnionTypeWithDefaultValue.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.WhiteSpace.OperatorSpacing.NoSpaceAfter">
        <exclude-pattern>tests/unit/RequiresUnionType.php</exclude-pattern>
        <exclude-pattern>tests/unit/UnionTypeWithDefaultValue.php</exclude-pattern>
    </rule>
</ruleset>
